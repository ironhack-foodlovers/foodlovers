

{{#with user}}
<h1>Hello {{username}}</h1>
{{/with}}

<h1>Liste aller Restaurants</h1>

<button onclick="window.location.href = '/all/add';">Add new Restaurant</button>

<hr />

{{#if message}}
		<p>{{message}}</p>
	{{/if}}

<h3>Filter: </h3>

<p>{{test}}</p>

<form action="/all/filtered" method="POST">
<div class="tag-filter">
  <select name="filteredTags">
    {{#each newTags}}
    <option>{{name}}</option>
    {{/each}}
  </select>
  </div>

  <button type="submit">Filter</button>
</form>

{{#each restaurants}}

{{#if liked}}
 <img class="addBtn" src="/images/full-star.png " alt="add" onclick="window.location.href = '/all/add-favorite/{{_id}}';"></img>
{{else}}
 <img class="addBtn" src="/images/empty-star.png " alt="add" onclick="window.location.href = '/all/add-favorite/{{_id}}';"></img>
{{/if}}

{{!-- Display Image --}}
<img src="{{imageUrl}}" class="restaurant-img" alt="{{name}}">

{{!-- Link to Detail Page --}}
<a href="/details/{{_id}}">Details</a>

<h1>{{name}}</h1>

 <h4>Tags:</h4>
{{#each tags}}
<p>{{this}}</p>
{{/each}}

<button onclick="window.location.href = '/all/edit/{{_id}}';">Edit</button>
<button onclick="window.location.href = '/all/delete/{{_id}}';">Delete</button>
<hr />

{{/each}}


{{!-- -------------------------------------------Map Start-------------------------------------------- --}}

<div id='map' style='width: 75vw; height: 60vh;'></div>	
<script src="/js/map-all-restaurants.js"></script>

{{!-- -------------------------------------------Map End-------------------------------------------- --}}

