<h1>Liste aller Restaurants</h1>

<button onclick="window.location.href = '/all/add';">Add new Restaurant</button>

<hr />

{{#if message}}
		<p>{{message}}</p>
	{{/if}}

<h3>Filter: </h3>

<p>{{test}}</p>

<form action="/all/filtered" method="POST">
<select name="filteredTags">
{{#each newTags}}
<option>{{name}}</option>
{{/each}}
</select>
<button type="submit">Filter</button>
</form>

{{#each restaurants}}
<h1>{{name}}</h1>

<h4>Adresse:</h4>
<p>{{street}} {{houseNumber}}</p>
<p>{{zipCode}}, {{city}}</p>
<p>{{country}}</p>

<h4>Kontakt:</h4>
<p>{{telephone}}</p>
<p>{{url}}</p>

 <h4>Tags:</h4>
{{#each tags}}
<p>{{this}}</p>
{{/each}}

<h4>Beschreibung:</h4>
<p>{{description}}</p>

<button onclick="window.location.href = '/all/edit/{{_id}}';">Edit</button>
<button
onclick="window.location.href = '/all/delete/{{_id}}';"
>Delete</button>
<button onclick="window.location.href = '/all/add-favorite/{{_id}}';">Add to
Favorites</button>

<hr/>
{{/each}}


{{!-- -------------------------------------------Map Start-------------------------------------------- --}}

<div id='map' style='width: 75vw; height: 60vh;'></div>	
<script src="/js/map-all-restaurants.js"></script>

{{!-- -------------------------------------------Map End-------------------------------------------- --}}

