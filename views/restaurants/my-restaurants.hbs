
<ul id="ul-layout">
 <div class="navbar-left">
  <li class="il-layout"><a href="/my-restaurants" style="text-decoration: underline #133E5C;">My restaurants</a></li>
  <li class="il-layout"><a href="/all">All restaurants</a></li>
</div>

<div class="navbar-center">
  <li> <img class="logo" src="/images/logo.png " alt="logo"></img></li>
  </div>

<div class="navbar-right">
 <li class="il-layout"><a href="/logout">Logout </a></li>
  <li class="il-layout"> {{#with user}}<p>Hello {{username}}</p>{{/with}}</li>
</div>
</ul>


<h1>Welcome to my restaurants 🍔</h1>


<h3>Filter: </h3>

<p>{{test}}</p>

<form action="/my-restaurants/filtered" method="POST">
    <select name="filteredTags">
    {{#each newTags}}
    <option>{{name}}</option>
    {{/each}}
    </select>
    <button type="submit">Filter</button>
</form>



{{#each restaurants}}

{{#if liked}}
 <img class="addBtn" src="/images/full-star.png " alt="add" onclick="window.location.href = '/all/remove/{{_id}}';"></img>
{{else}}
 <img class="addBtn" src="/images/empty-star.png " alt="add" onclick="window.location.href = '/all/remove/{{_id}}';"></img>
 {{/if}}

{{!-- Display Image --}}
<img src="{{imageUrl}}" class="restaurant-img" alt="{{name}}">

{{!-- Link to Detail Page --}}
<a href="/details/{{_id}}">Details</a>

<h1>{{name}}</h1>

<h4>Tags:</h4>

{{#each tags}}
    <p>{{this}}</p>
{{/each}}

<button onclick="window.location.href = '/all/edit/{{_id}}';">Edit</button>
<button onclick="window.location.href = '/all/remove/{{_id}}';">Remove from favorites</button>

<hr>

{{/each}}

{{!-- -------------------------------------------Map Start-------------------------------------------- --}}

<div id='map' style='width: 75vw; height: 60vh;'></div>	
<script src="/js/map-my-favorite-restaurants.js"></script>

{{!-- --------------------------------------------Map End---------------------------------------------- --}}